<Window x:Class="WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        xmlns:props="clr-namespace:WPFApp.Properties"
        mc:Ignorable="d"
        Title="Main window"
        Height="450" Width="800" 
        Closed="Window_Closed" Loaded="Window_Loaded" 
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <!--<Label 
            x:Name="lblPlaceholder"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="{x:Static props:Resources.placeholder}">
        </Label>-->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>

        <Button Background="Red"/>
        <Button Grid.Column="1" Background="Blue"/>
        <Button Grid.Row="1" Background="Green"/>
        <Button Grid.Column="1" Grid.Row="1" Background="Purple"/>
    </Grid>
</Window>

<Window x:Class="WPFApp.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        FontFamily="Century Gothic"
        Loaded="Window_Loaded"
        Title="Startup settings" Height="400" Width="800" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label 
            Grid.Row="0" 
            Grid.ColumnSpan="2" 
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
            FontSize="40"
            FontWeight="Bold">
            Startup settings
        </Label>

        <Label
            Grid.Row="1"
            Grid.Column="0"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
            Width="230"
            HorizontalAlignment="Left"
            Margin="160,10,0,10"
            FontSize="30">
            Championship:
        </Label>
        <ComboBox 
            x:Name="ddlChampionship"
            Grid.Row="1"
            Grid.Column="1"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
            Width="230"
            HorizontalAlignment="Left"
            Margin="10,10,0,10"
            FontSize="20" 
            Cursor="Hand">
        </ComboBox>

        <Label
            Grid.Row="2"
            Grid.Column="0"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
            Width="170"
            HorizontalAlignment="Left"
            Margin="220,10,0,10"
            FontSize="30">
            Language:
        </Label>
        <ComboBox 
            x:Name="ddlLanguage"
            Grid.Row="2"
            Grid.Column="1"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
            Width="230"
            HorizontalAlignment="Left"
            Margin="10,10,0,10"
            FontSize="20" 
            Cursor="Hand">
        </ComboBox>

        <Label
            Grid.Row="3"
            Grid.Column="0"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
            Width="281"
            HorizontalAlignment="Left"
            Margin="109,10,0,10"
            FontSize="30">
            Window resolution:
        </Label>
        <ComboBox 
            x:Name="ddlResolution"
            Grid.Row="3"
            Grid.Column="1"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
            Width="230"
            HorizontalAlignment="Left"
            Margin="10,10,0,10"
            FontSize="20" 
            Cursor="Hand">
        </ComboBox>

        <Button 
            x:Name="btnContinue"
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="20"
            Cursor="Hand"
            Height="50"
            Width="150"
            Margin="35"
            Click="btnContinue_Click">
            CONTINUE
        </Button>
    </Grid>
</Window>
